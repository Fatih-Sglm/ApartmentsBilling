@model ApartmentsBilling.Common.Dtos.BillsDto.UpdateBillDto

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/jquery/jquery.min.js"></script>
<h1>UpdateAsync</h1>

<h4>UpdateBillDto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateAsync">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BillTypeId" class="control-label"></label>
                <input asp-for="BillTypeId" class="form-control" />
                <span asp-validation-for="BillTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlatId" class="control-label"></label>
                <input asp-for="FlatId" class="form-control" />
                <span asp-validation-for="FlatId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastPaymentDate" class="control-label"></label>
                <input asp-for="LastPaymentDate" class="form-control" />
                <span asp-validation-for="LastPaymentDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    @* <input class="form-check-input" asp-for="isPayment" /> @Html.DisplayNameFor(model => model.isPayment)*@
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


<div class="bg-secondary rounded h-100 p-4">
    <h6 class="mb-4">Horizontal Form</h6>
    <form asp-action="UpdateAsync">
        <div class="row mb-3">
            <input type="hidden" asp-for="Id" class="form-control">
        </div>
        <select asp-for="BillTypeId" class="form-control" title="Ödeme Tipini Seçin">
            @foreach (var item in ViewBag.BillType)
            {
                <option value="@item.Id" class="form-control">@item.Name</option>
            }
        </select>
        <div class="form-floating mb-3">
            <input type="number" class="form-control" id="floatingPrice" @*placeholder="Fatura Tutarı"*@>
            <label for="floatingPrice">Fatura Tutarı</label>
        </div>
        <div class="row mb-3">
            <legend class="col-form-label col-sm-2 pt-0">Ödendi mi</legend>
            <div class="col-sm-10">
                <div class="form-check">
                    <input class="form-check-input" asp-for="IsPayment" type="checkbox" id="gridCheck1">
                    <label class="form-check-label" for="gridCheck1">
                    </label>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Güncelle</button>
    </form>
</div>



