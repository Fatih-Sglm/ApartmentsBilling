@model ApartmentsBilling.Common.Dtos.BillsDto.UpdateBillDto

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="bg-secondary rounded h-100 p-4">
    <h6 class="mb-4">Horizontal Form</h6>
    <form asp-action="Update">
        <div class="row mb-3">
            <input type="hidden" asp-for="Id" class="form-control">
        </div>
        <select asp-for="BillTypeId" class="form-control" title="Ödeme Tipini Seçin">
            @foreach (var item in ViewBag.BillType)
            {
                <option value="@item.Id" class="form-control">@item.Name</option>
            }
        </select>
        <div class="form-floating mb-3">
            <input type="number" class="form-control" id="floatingPrice" @*placeholder="Fatura Tutarı"*@>
            <label for="floatingPrice">Fatura Tutarı</label>
        </div>
        <div class="row mb-3">
            <legend class="col-form-label col-sm-2 pt-0">Ödendi mi</legend>
            <div class="col-sm-10">
                <div class="form-check">
                    <input class="form-check-input" asp-for="IsPayment" type="checkbox" id="gridCheck1">
                    <label class="form-check-label" for="gridCheck1">
                    </label>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Güncelle</button>
    </form>
</div>



